<h3><%= t ".title" %></h3>
<span class="badge badge-primary"><%= link_to t(".back"), :back %></span>
<div class="box">
  <div class="box-body">
    <h4 class="text-center"><%= @user.name %>
    </h4>
    <div class="row">
      <div class="col-3">
        <h4 class="text-right"><%= t ".email" %></h4>
      </div>
      <div class="col-9">
        <h4 class="text-danger"><%= @user.email %></h4>
      </div>
    </div>
    <div class="row">
      <div class="col-3">
        <h4 class="text-right"><%= t ".organization" %></h4>
      </div>
      <div class="col-9">
        <h4 class="text-danger"><%= @user.organization %></h4>
      </div>
    </div>
    <div class="row">
      <div class="col-3">
        <h4 class="text-right"><%= t "role" %></h4>
      </div>
      <div class="col-9">
        <h4 class="text-danger"><%= @user.role.capitalize %></h4>
      </div>
    </div>
  </div>
</div>
