<td>#<%= news.id %></td>
<td><h4><%= link_to news.title.truncate_words(Settings.news.title.truncate), [:admin, news] %></h4></td>
<td><%= news.status %></td>
<td>
  <div>
    <%= render "edit_form", news: news%>
  </div>
</td>
<td>
  <h4>
    <%= link_to [:admin, news], method: :delete, data: {confirm: t(".sure")} do %>
      <i class="fa fa-trash-o" aria-hidden="true"></i>
    <% end %>
  </h4>
</td>