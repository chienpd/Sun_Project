<p id="notice"><%= notice %></p>
<h1><%= t ".title" %></h1>
<br>
<br>
<div class="col-12 mb-30">
  <div class="box">
    <div class="box-body">
      <div class="table-responsive">
        <table class="table table-vertical-middle table-selectable" id="all-news">
          <!-- Table Head Start -->
          <thead>
          <tr>
            <th><span><%= t ".id" %></span></th>
            <th><span><%= t ".title" %></span></th>
            <th><span><%= t ".status" %></span></th>
            <th><span><%= t ".action" %></span></th>
            <th><span><%= t ".delete" %></span></th>
          </tr>
          </thead><!-- Table Head End -->
          <tbody>
            <% @all_news.each do |news|%>
              <tr id="news-<%= news.id %>">
                <%= render news %>
              </tr>
            <% end %>
          </tbody><!-- Table Body End -->
        </table>
      </div>
    </div>
  </div>
</div>
<%= paginate @all_news, theme: "twitter-bootstrap-4",pagination_class: "pagination-sm" %>
