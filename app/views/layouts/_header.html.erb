<header>
  <div class="header-menu mt-50" id="sticky-header">
    <div class="container main-menu">
      <nav class="navbar navbar-expand-sm bg-black navbar-dark">
        <!-- Brand -->
        <%= link_to image_tag("home-one/icon/logo.png", alt: "logo", class: "logo_size"), root_path %>
        <%= form_tag(search_index_path, method: :get) do %>
          <div class="searchbar">
            <%= text_field_tag :keyword, params[:keyword], class: "search_input", autocomplete: :off, required: true %>
            <span>
              <%= submit_tag t("Search"), class: "btn btn-outline-success button-search" %>
            </span>
          </div>
        <% end %>
        <div>
          <ul class="navbar-nav header-menu-nav">
            <li class="nav-item">
              <%= link_to t("movies_title"), movies_path %>
            </li>
            <li class="nav-item">
              <%= link_to t("tvshow_title"), tv_shows_path %>
            </li>
            <li class="nav-item">
              <%= link_to t("news_title"), news_index_path %>
            </li>
            <% if user_signed_in? %>
                <li><a href="#" class="home-icon"><i class="fa fa-bars" aria-hidden="true"></i></a>
                  <ul class="sub-menu">
                    <li>
                      <%= link_to "Profile", current_user, class: "name-style" %>
                    </li>
                    <% if current_user.admin? %>
                      <li>
                        <%= link_to "Admin", admin_root_path %>
                      </li>
                    <% end %>
                    <li>
                      <%= link_to t("logout"), destroy_user_session_path, method: :delete %>
                    </li>
                  </ul>
                </li>
            <% else %>
              <li><a href="#" class="home-icon"><i class="fa fa-bars" aria-hidden="true"></i></a>
                <ul class="sub-menu">
                  <li>
                    <%= link_to t("login_title"), "#", {"data-toggle" => "modal", "data-target" => "#loginModal"} %>
                  </li>
                  <li>
                    <%= link_to t("signup_title"), "#", {"data-toggle" => "modal", "data-target" => "#signupModal"} %>
                  </li>
                </ul>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>

    </div>
  </div>
  <%= yield :slider %>
</header>
