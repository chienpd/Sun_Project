<div class="tab-pane fade" id="menu2">
  <div class="panel panel-default">
    <h2><span class="badge badge-warning">
      <%= t "tv_shows.show.tab_tvshow.top" %></span></h2>
    <div>
      <% @top_score_tvshow.take(Settings.tab_show).each do |tvshow| %>
        <h5><span class="badge-light"><i class="fa fa-film" aria-hidden="true"></i></span>
          <%= link_to tvshow.name, tvshow, class: "text-warning" %>
        </h5>
      <% end %>
    </div>
    <% unless @top_score_tvshow.count <= Settings.tab_show %>
      <%= link_to t("movies.show.more"), tv_shows_path, class: "text-info" %>
    <% end %>
  </div>
</div>
